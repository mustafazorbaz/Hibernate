<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
<session-factory>

	 <!-- Database connection settings -->
          <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
		  <property name="hibernate.connection.password">123456</property>
		  <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/okul</property>
		  <property name="hibernate.connection.username">postgres</property>
		  
	 

        <!-- SQL dialect -->
         <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>

        <!-- Disable the second-level cache  -->
        <!-- Echo all executed SQL to stdout -->
        <property name="show_sql">true</property>

        <!-- Drop and re-create the database schema on startup -->
        <property name="hbm2ddl.auto">create</property>
        <!--    <property name="hbm2ddl.auto">create</property> -->

     <!--    <mapping class="com.mustafazorbaz.mapping.Muhendis"/> -->
 		<mapping resource="com/mustafazorbaz/mapping/Muhendis.hbm.xml"/> 		
 		<mapping resource="com/mustafazorbaz/mapping/Muhendis.hbm.xml"/>
      <!--    <mapping class="com.mustafazorbaz.mapping.MuhendisBilgisi"/> -->
        
</session-factory>
</hibernate-configuration>